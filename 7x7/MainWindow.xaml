            <Button x:Name="button9" Style="{StaticResource Square}"/>
            <Button x:Name="button10" Style="{StaticResource Square}"/>
            <Button x:Name="button11" Style="{StaticResource Square}"/>
            <Button x:Name="button12" Style="{StaticResource Square}"/>
            <Button x:Name="button13" Style="{StaticResource Square}"/>
            <Button x:Name="button14" Style="{StaticResource Square}"/>
            <Button x:Name="button15" Style="{StaticResource Square}"/>
            <Button x:Name="button16" Style="{StaticResource Square}"/>
            <Button x:Name="button17" Style="{StaticResource Square}"/>
            <Button x:Name="button18" Style="{StaticResource Square}"/>
            <Button x:Name="button19" Style="{StaticResource Square}"/>
            <Button x:Name="button20" Style="{StaticResource Square}"/>
            <Button x:Name="button21" Style="{StaticResource Square}"/>
            <Button x:Name="button22" Style="{StaticResource Square}"/>
            <Button x:Name="button23" Style="{StaticResource Square}"/>
            <Button x:Name="button24" Style="{StaticResource Square}"/>
            <Button x:Name="button25" Style="{StaticResource Square}"/>
            <Button x:Name="button26" Style="{StaticResource Square}"/>
            <Button x:Name="button27" Style="{StaticResource Square}"/>
            <Button x:Name="button28" Style="{StaticResource Square}"/>
            <Button x:Name="button29" Style="{StaticResource Square}"/>
            <Button x:Name="button30" Style="{StaticResource Square}"/>
            <Button x:Name="button31" Style="{StaticResource Square}"/>
            <Button x:Name="button32" Style="{StaticResource Square}"/>
            <Button x:Name="button33" Style="{StaticResource Square}"/>
            <Button x:Name="button34" Style="{StaticResource Square}"/>
